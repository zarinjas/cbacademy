# =============================================================================
# CB Academy - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values

# =============================================================================
# Application Configuration
# =============================================================================
APP_NAME="Chef Bull Academy"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

# =============================================================================
# Database Configuration
# =============================================================================
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=cbacademy
DB_USERNAME=root
DB_PASSWORD=

# =============================================================================
# Shared Learner Account Configuration
# =============================================================================
# These credentials are used by the Settings page to sync the shared learner account
SHARED_LEARNER_EMAIL=access@chefbullacademy.local
SHARED_LEARNER_PASSWORD=your_secure_password_here

# =============================================================================
# Cache & Session Configuration
# =============================================================================
BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

# =============================================================================
# Memory & Redis Configuration
# =============================================================================
MEMCACHED_HOST=127.0.0.1
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =============================================================================
# Mail Configuration
# =============================================================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@cbacademy.com"
MAIL_FROM_NAME="${APP_NAME}"

# =============================================================================
# AWS Configuration (Optional)
# =============================================================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# =============================================================================
# Broadcasting Configuration (Optional)
# =============================================================================
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# =============================================================================
# Vite Configuration
# =============================================================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# =============================================================================
# Security & Rate Limiting Configuration
# =============================================================================
# Rate Limiting Settings
LOGIN_MAX_ATTEMPTS=5
LOGIN_DECAY_MINUTES=1
API_MAX_ATTEMPTS=60
API_DECAY_MINUTES=1
EMAIL_VERIFICATION_MAX_ATTEMPTS=6
EMAIL_VERIFICATION_DECAY_MINUTES=1
PASSWORD_RESET_MAX_ATTEMPTS=3
PASSWORD_RESET_DECAY_MINUTES=5
ADMIN_ACTIONS_MAX_ATTEMPTS=30
ADMIN_ACTIONS_DECAY_MINUTES=1

# Security Headers
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# =============================================================================
# Maintenance Mode Configuration
# =============================================================================
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# =============================================================================
# Application Locale Configuration
# =============================================================================
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US
